<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_vice_bg">

    <RelativeLayout
        android:id="@+id/rl_top_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_welcom"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_toLeftOf="@+id/tv_welcom_name"
            android:gravity="center"
            android:text="欢迎您："
            android:textColor="@color/white"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tv_welcom_name"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="7sp"
            tools:text="李四" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_info"
        android:layout_width="420dp"
        android:layout_height="472dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/gradient_bg"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_busi_type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:baselineAlignBottom="true"
            android:gravity="center_vertical"
            android:text="业务类型:"
            android:textColor="@color/color_text_title"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_business_type" />

        <TextView
            android:id="@+id/tv_business_type"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/writeinfobg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@id/tv_busi_type"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="个人业务" />

        <TextView
            android:id="@+id/tv_enterprise_n_tip"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="企业名称:"
            android:textColor="@color/color_text_title"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_enterprise_n" />

        <TextView
            android:id="@+id/tv_enterprise_n"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/writeinfobg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_transactor_tip"
            app:layout_constraintTop_toBottomOf="@+id/tv_business_type"
            tools:text="北京市XXXXXXXXX股份有限公司" />

        <TextView
            android:id="@+id/tv_credit_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="企业代码:"
            android:textColor="@color/color_text_title"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_credit_code" />

        <TextView
            android:id="@+id/tv_credit_code"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/writeinfobg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_transactor_tip"
            app:layout_constraintTop_toBottomOf="@+id/tv_enterprise_n"
            tools:text="3429401868934221" />

        <TextView
            android:id="@+id/tv_transactor_tip"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="办理人:"
            android:textColor="@color/color_text_title"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_transactor" />

        <TextView
            android:id="@+id/tv_transactor"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/writeinfobg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_transactor_tip"
            app:layout_constraintTop_toBottomOf="@+id/tv_credit_code"
            tools:text="李四" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:baselineAlignBottom="true"
            android:gravity="center_vertical"
            android:text="身份证号:"
            android:textColor="@color/color_text_title"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_writeinfo_cardno" />

        <TextView
            android:id="@+id/tv_writeinfo_cardno"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/tv2"
            android:background="@drawable/writeinfobg"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:maxLength="18"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@id/tv2"
            app:layout_constraintTop_toBottomOf="@id/tv_transactor"
            tools:text="XXXXXXXXXXXXXXXXX" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:baselineAlignBottom="true"
            android:gravity="center_vertical"
            android:text="手机号:"
            android:textColor="@color/color_text_title"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_writeinfo_phone" />

        <TextView
            android:id="@+id/tv_writeinfo_phone"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/tv3"
            android:background="@drawable/writeinfobg"
            android:gravity="center_vertical"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@id/tv3"
            app:layout_constraintTop_toBottomOf="@id/tv_writeinfo_cardno"
            tools:text="XXXXXXXXXXXXX" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:baselineAlignBottom="true"
            android:gravity="center_vertical"
            android:text="卡号:"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_card_num" />

        <EditText
            android:id="@+id/et_card_num"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:background="@color/white"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingLeft="0dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@id/tv4"
            app:layout_constraintTop_toBottomOf="@id/tv_writeinfo_phone"
            tools:text="13800000002" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:baselineAlignBottom="true"
            android:gravity="center_vertical"
            android:text="金额:"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_amount" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:background="@color/white"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@id/tv4"
            app:layout_constraintTop_toBottomOf="@id/et_card_num"
            tools:text="10000" />

        <TextView
            android:id="@+id/tv51"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:baselineAlignBottom="true"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/et_amount"
            app:layout_constraintTop_toTopOf="@id/et_amount" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rv_view4"
        android:layout_width="710dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/rv_info"
        app:layout_constraintTop_toTopOf="@id/rv_info"
        app:layout_constraintVertical_weight="1">

        <RelativeLayout
            android:id="@+id/rv_idcard"
            android:layout_width="350dp"
            android:layout_height="226dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/whitebg">

            <TextView
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="身份证照片"
                android:textColor="@color/color_ef3a3a"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_idcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_portrait"
            android:layout_width="350dp"
            android:layout_height="226dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/whitebg">

            <TextView
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="头像"
                android:textColor="@color/color_ef3a3a"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_portrait"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_sign"
            android:layout_width="350dp"
            android:layout_height="226dp"
            android:layout_below="@+id/rv_idcard"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/whitebg">

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="签字"
                android:textColor="@color/color_ef3a3a"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_license"
            android:layout_width="350dp"
            android:layout_height="226dp"
            android:layout_below="@+id/rv_idcard"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/whitebg">

            <TextView
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="执照照片"
                android:textColor="@color/color_ef3a3a"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_license"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
    <!--    </RelativeLayout>-->


    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="@+id/rv_view4"
        app:layout_constraintTop_toBottomOf="@+id/rv_view4"
        app:layout_constraintVertical_weight="1">

        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_retake"
            android:background="@drawable/red_gradient_button_bg"
            android:gravity="center"
            android:text="通过"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_retake"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_gradient_button_bg"
            android:gravity="center"
            android:text="重拍"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

